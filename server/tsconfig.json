{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@vync/cache": [
        "packages/cache/src"
      ],
      "@vync/config": [
        "packages/config/src"
      ],
      "@vync/shared": [
        "packages/shared/src"
      ]
    }
  },
  "include": [
    "packages/*/src",
    "services/*/src",
    "packages/shared/auth/middlewares",
    "packages/config/index.ts"
  ]
}
